%div.container
  %h1 Orders
  %table.table
    %thead
      %tr
        %th
          plan type
        %th
          number of members
        %th
          date
        %th
          bookings
    %tbody
      - current_user.orders.each do |order|
        %tr
          %td
            = order.plan_type
          %td
            = order.member_num
          %td
            = order.start_date
            = "~"
            = order.end_date
          %td
            - if order.plan_type == 'normal'
              = link_to 'show bookings', user_order_bookings_path(user_id: params[:user_id], order_id: order.id)
            - else
              = "-"
