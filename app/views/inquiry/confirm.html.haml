%div.container
  %h1 Inquiry
  = form_for @inquiry, url: inquiry_thanks_path do |f|
    .form-group
      = f.label :name, "name" , class: "control-label"
      %br
      = @inquiry.name
      = f.hidden_field :name, class: "form-control"
    .form-group
      = f.label :email, "email" , class: "control-label"
      %br
      = @inquiry.email
      = f.hidden_field :email, class: "form-control"
    .form-group
      = f.label :message, "message" , class: "control-label"
      %br
      = @inquiry.message
      = f.hidden_field :message, class: "form-control"
    = f.submit 'confirm', class: "btn btn-primary"
